generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TradingDay {
  id           Int       @id @default(autoincrement())
  linha        Int       @unique
  capital      Float
  metaLiq      Float
  contratos    Int
  ptsPorOp     Int
  opsPorDia    Int
  totalPts     Int
  lucroLiq     Float
  gainDiario   Float
  incTotal     Float
  totalAcum    Float
  completado   Boolean   @default(false)
  dataExecucao DateTime?
  observacoes  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sentimento   String?  // "Calmo", "Ansioso", "Euf√≥rico"
  erroComum    String?  // "Nenhum", "Overtrading", "Stop Longo", etc
  notas        String?  @db.Text
}
